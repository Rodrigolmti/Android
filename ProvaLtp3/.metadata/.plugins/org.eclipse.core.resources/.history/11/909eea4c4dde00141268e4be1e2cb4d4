				case 0:
					break;
					
				default:
					System.out.println("Opção inválida!");
					break;
				}
		} while (opcao!=0);
     
	
	}



public static double valorPrestacao (double valorEmprestimo, double juros, int prazo) {
	juros = juros / 100;
	return valorEmprestimo * (juros * Math.pow(1+juros, prazo)) / (Math.pow(1+juros, prazo)-1);

}
static String formatarMillissegundos(long mseg){
	int horas = ((int) mseg) / 3600000; 
	int rhora = ((int) mseg) % 3600000; 
	int min = rhora / 60000; 
	int rmin = rhora % 60000; 
	int seg = rmin / 1000; 

	return horas + ":" + min + ":" + seg;
		
}
