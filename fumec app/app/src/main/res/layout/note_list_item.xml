<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_half_margin"
    android:layout_marginRight="@dimen/activity_half_margin"
    android:background="@drawable/custom_item_border"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout_note"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_margin"
        android:background="@drawable/custom_circular_background"
        android:clipToPadding="false">

        <net.fumapp_android.ui.custom.CustomTextViewBlack
            android:id="@+id/text_view_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="8.5"
            />

    </RelativeLayout>

    <net.fumapp_android.ui.custom.CustomTextViewBlack
        android:id="@+id/text_view_static_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_student"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_student"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_half_padding"
        android:paddingRight="@dimen/activity_half_padding"
        android:paddingTop="@dimen/activity_half_padding"
        android:text="@string/fragment_note_value_note"
        />

    <net.fumapp_android.ui.custom.CustomTextViewMedium
        android:id="@+id/text_view_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_static_note"
        android:layout_alignBottom="@+id/text_view_static_note"
        android:layout_toEndOf="@+id/text_view_static_note"
        android:layout_toRightOf="@+id/text_view_static_note"
        style="@style/TextViewBlack"
        android:padding="@dimen/activity_half_padding"
        tools:text="Self Instructional"
        />

    <net.fumapp_android.ui.custom.CustomTextViewMedium
        android:id="@+id/text_view_static_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_view_class"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:text="@string/fragment_note_launch"
        android:visibility="gone"
        />

</RelativeLayout>